---
import EducationCard from "./EducationCard.astro";
import salesianoIcon from "../../../public/icons/salesiano.png";
import udecIcon from "../../../public/icons/udec.png";
---

<div id="education" class="align-center flex w-full justify-center p-16">
  <div class="w-6xl max-w-6xl">
    <h1 class="mb-10 text-left text-4xl font-bold text-blue-900">
      Formación Académica
    </h1>
    <div class="grid grid-cols-1 gap-6 text-white lg:grid-cols-2">
      <EducationCard
        imageSrc={salesianoIcon}
        altText="Salesiano Icon"
        title="Liceo Salesiano Domingo Savio"
        description="Mi formación de educación media la realicé en el Liceo Salesiano Domingo Savio, Concepción, Chile."
        bgColor="bg-blue-950"
      />
      <EducationCard
        imageSrc={udecIcon}
        altText="Universidad de Concepción Icon"
        title="Universidad de Concepción"
        description="Soy Ingeniero Civil Informático, titulado en 2024 de la Universidad de Concepción, ubicada en Concepción, Chile, correspondiente a la generación de 2018."
        bgColor="bg-orange-500"
      />
    </div>
  </div>
</div>
