---
interface Props {
  overlayColor: string;
}
const { overlayColor } = Astro.props;
---

<div
  class={`
    absolute inset-0
    flex flex-col
    pl-6 pr-6
    ${overlayColor}
    bg-opacity-80 sm:bg-opacity-80
    opacity-100 sm:opacity-0
    group-hover:opacity-100
    group-hover:translate-y-0
    group-hover:scale-100
    transition-all duration-500 ease-in-out
  `}
>
  <slot />
</div>
