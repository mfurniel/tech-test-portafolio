---
import { Image } from "astro:assets";
import type { ImageMetadata } from "astro";
import ProjectLinks from "./ProjectLinks.astro";
import TechList from "./TechList.astro";
import OverlayCard from "./OverlayCard.astro";

export interface Props {
  title: string;
  description: string;
  image: ImageMetadata;
  bgColor?: string;
  overlayColor?: string;
  projectLink?: string;
  githubLink?: string;
  techs?: string[];
}

const {
  title,
  description,
  image,
  bgColor = "bg-gray-400",
  overlayColor = "bg-red-400",
  projectLink,
  githubLink,
  techs,
} = Astro.props;
---

<section
  class={`relative group w-[350px] h-[350px] overflow-hidden ${bgColor} rounded-4xl shadow-md`}
>
  <Image src={image} alt={title} class="h-full w-full object-contain p-4" />
  <OverlayCard overlayColor={overlayColor}>
    <TechList techs={techs} />
    <div
      class="flex flex-grow flex-col opacity-100 transition-all duration-500 ease-in-out group-hover:opacity-100 sm:opacity-0 sm:group-hover:translate-y-4"
    >
      <h1 class="mb-4 text-left text-2xl font-semibold text-white">{title}</h1>
      <p class="text-md font-semibold text-white">{description}</p>
    </div>
    <ProjectLinks projectLink={projectLink} githubLink={githubLink} />
  </OverlayCard>
</section>
