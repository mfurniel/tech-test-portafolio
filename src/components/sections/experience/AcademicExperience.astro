---
import SectionContainer from "../../shared/SectionContainer.astro";
import Experience from "./ui/Experience.vue";
import { experiencesAcademyc as esExperiencesAcademyc } from "../../../data/es/experiences";
import { experiencesAcademyc as enExperiencesAcademyc } from "../../../data/en/experiences";
import { initTranslations } from "../../../i18n/initTranslations";

const { t, lang } = initTranslations(Astro);

function getTechsByLang(lang: string) {
  if (lang === "es") {
    return esExperiencesAcademyc;
  } else if (lang === "en") {
    return enExperiencesAcademyc;
  } else {
    return enExperiencesAcademyc;
  }
}

const currentExperencies = getTechsByLang(lang);
---

<SectionContainer
  title={t("section.academicExperienceTitle")}
  idSection="academic_experience"
>
  <Experience client:load experiences={currentExperencies} />
</SectionContainer>
