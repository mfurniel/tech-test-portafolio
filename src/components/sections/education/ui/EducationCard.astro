---
import { Image } from "astro:assets";
import type { ImageMetadata } from "astro";
export interface Props {
  imageSrc: ImageMetadata;
  altText: string;
  title: string;
  description: string;
  bgColor: string;
}

const { imageSrc, altText, title, description, bgColor } = Astro.props as Props;
---

<div
  class={`flex flex-col items-center justify-start p-10 rounded-2xl gap-4 ${bgColor} text-center transform transition-all duration-300 hover:scale-105 hover:translate-y-[-5px]`}
>
  <div class="h-26 w-24 object-contain sm:h-28 sm:w-24">
    <Image src={imageSrc} alt={altText} class="object contain" />
  </div>
  <h2 class="text-2xl font-bold">
    {title}
  </h2>
  <p class="text-center text-lg">
    {description}
  </p>
</div>
