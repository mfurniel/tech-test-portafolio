---
import { Image } from "astro:assets";
import profileImage from "../../public/images/profile.jpg";
import SmoothScrollLink from "./CustomSideBar/SmoothScrollLink.vue";
---

<div
  id="home"
  class="flex h-screen w-full flex-col items-center justify-center gap-2 bg-[url('/backgroundHome.svg')] bg-cover pb-32 text-center"
>
  <Image
    src={profileImage}
    alt="Descripción de la imagen"
    class="m-2 h-40 w-40 rounded-full border-2 border-blue-900 object-cover"
  />
  <h1 class="text-3xl font-bold text-blue-900">Mauricio Furniel Campos</h1>
  <h2 class="text-xl font-semibold">Ingeniero Civil Informático</h2>
  <p class="text-s font-bold text-gray-500">Universidad de Concepción</p>
  <div class="mt-2 flex space-x-6">
    <a
      href="https://github.com/mfurniel"
      target="_blank"
      rel="noopener noreferrer"
    >
      <img
        src="/icons/github.svg"
        alt="GitHub"
        class="h-8 w-8 transition-all duration-500 hover:brightness-150 hover:invert hover:saturate-150"
      />
    </a>
    <a
      href="https://www.linkedin.com/in/mauricio-furniel/"
      target="_blank"
      rel="noopener noreferrer"
    >
      <img
        src="/icons/linkedin.svg"
        alt="LinkedIn"
        class="h-8 w-8 transition-all duration-500 hover:brightness-150 hover:invert hover:saturate-150"
      />
    </a>
  </div>
  <div class="absolute bottom-12 flex list-none flex-col items-center gap-1">
    <h1 class="text-md font-bold text-blue-900">Sigue Bajando!</h1>
    <SmoothScrollLink
      target="#about"
      icon="icons/scrollarrowtodown.svg"
      alt="Sobre Mí"
      class="animate-pulse"
      client:load
    />
  </div>
</div>
